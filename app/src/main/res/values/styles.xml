<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/pinkSwan</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <style name="tabLayoutText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle"></item>
    </style>

    <style name="tabLayoutText1" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle"></item>
    </style>

    <!-- 폰트 -->
    <style name="MoaFont">
        <item name="android:fontFamily">@font/custom_font</item>
    </style>
    <!-- 선택적 접근권한 다이얼로그 타이틀 -->
    <style name="OptionalAccessDialogTitle" parent="MoaFont">
        <item name="android:textColor">@color/coral</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/moa_optional_access_dialog_title_margin_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16.7sp</item>
    </style>
    <!-- 선택적 접근 권한 다이얼로그 서브 타이틀 -->
    <style name="OptionalAccessDialogSubTitle" parent="MoaFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- 권한 설명-->
    <style name="OptionalAccessDialogSubContent" parent="MoaFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/matterhorn</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">@dimen/moa_optional_access_dialog_main_sub_content_margin_left</item>
        <item name="android:layout_marginStart">@dimen/moa_optional_access_dialog_main_sub_content_margin_left</item>
    </style>

    <style name="DialogTitleContent" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="responsiveTextSize">32</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogFinishLine">
        <item name="android:background">@color/pinkSwan</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="DialogSubTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="responsiveTextSize">34</item>
    </style>

    <style name="DialogSubContent" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/matterhorn</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="responsiveTextSize">34</item>
    </style>

    <style name="CommonCoralRadiusButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/common_radius_coral_button_form</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="responsiveTextSize">36</item>
    </style>

    <!-- 기본 위치 설정 타이틀-->
    <style name="DefaultLocationTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="responsiveTextSize">36</item>
    </style>

    <!-- 회원가입의 타이틀 부분 -->
    <style name="SignUpTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="responsiveTextSize">36</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SignUpErrorMessage" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/coral</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="responsiveTextSize">30</item>
    </style>

    <style name="MyRaidoButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/coral</item>
        <item name="colorControlNormal">@color/coral</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 주문 결제 관련 -->
    <style name="OrderPayMainTitle" parent="MoaFont">
        <item name="android:textSize">@dimen/order_payment_main_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OrderPaySubTitle" parent="MoaFont">
        <item name="android:textSize">@dimen/order_payment_sub_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OrderPayUnderLine">
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">@color/linkWater</item>
        <item name="android:layout_marginTop">@dimen/order_payment_common_margin_top</item>
    </style>

    <style name="OrderPayEditText">
        <item name="android:layout_height">@dimen/order_payment_edit_text_height</item>
        <item name="android:background">@drawable/common_edit_text_form</item>
        <item name="android:textSize">@dimen/order_payment_edit_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/order_payment_edit_text_padding_left</item>
    </style>

    <style name="OrderPayEditTextNoLine">
        <item name="android:layout_height">@dimen/order_payment_edit_text_height</item>
        <item name="android:background">@drawable/common_edit_noline</item>
        <item name="android:textSize">@dimen/order_payment_edit_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/order_payment_edit_text_padding_left</item>
    </style>

    <!-- 텍스트 -->
    <style name="BlackColorNormal" parent="MoaFont">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BlackColorBold" parent="BlackColorNormal">
        <item name="android:textStyle">bold</item>
    </style>


    <!-- 버튼 모음 -->
    <style name="CoralStyle" parent="MoaFont">
        <item name="android:background">@color/coral</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CoralBoldStyle" parent="CoralStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NobelStyle" parent="MoaFont">
        <item name="android:background">@color/nobel</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NobelBoldStyle" parent="NobelStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GoldenTainoiStyle" parent="MoaFont">
        <item name="android:background">@color/goldenTainoi</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GoldenTainoiBoldStyle" parent="GoldenTainoiStyle">
        <item name="android:textStyle"></item>
    </style>

    <style name="CoralRadioButton" parent="MoaFont">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/radio_button_coral</item>
        <item name="android:textSize">13.3sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="CoralCheckBox" parent="MoaFont">
        <item name="android:drawableStart">@drawable/check_box_coral</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="CoralRoundCheckBox" parent="MoaFont">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/round_checkbox</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#545454</item>

    </style>






