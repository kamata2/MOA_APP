<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/demo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.moaPlatform.moa.util.custom_view.temp.Responsive.ResponsiveSeekBar
        android:id="@+id/stepOneBar"
        android:layout_width="@dimen/test_1"
        android:layout_height="4dp"
        android:progressDrawable="@drawable/badge_seek_bar"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:maxHeight="4dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/stepTwoBar"
        android:layout_marginRight="36px"
        app:layout_constraintTop_toTopOf="@+id/stepOneGift"
        app:layout_constraintBottom_toBottomOf="@+id/stepOneGift"
        android:layout_marginTop="10px"
        />

    <com.moaPlatform.moa.util.custom_view.temp.Responsive.ResponsiveSeekBar
        android:id="@+id/stepTwoBar"
        android:layout_width="@dimen/test_1"
        android:layout_height="4dp"
        android:progressDrawable="@drawable/badge_seek_bar"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:maxHeight="4dp"
        app:layout_constraintLeft_toRightOf="@+id/stepOneBar"
        app:layout_constraintRight_toLeftOf="@+id/stepThreeBar"
        android:layout_marginRight="36px"
        app:layout_constraintTop_toTopOf="@+id/stepTwoGift"
        app:layout_constraintBottom_toBottomOf="@+id/stepTwoGift"
        android:layout_marginTop="10px"/>

    <com.moaPlatform.moa.util.custom_view.temp.Responsive.ResponsiveSeekBar
        android:id="@+id/stepThreeBar"
        android:layout_width="@dimen/test_1"
        android:layout_height="4dp"
        android:progressDrawable="@drawable/badge_seek_bar"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:maxHeight="4dp"
        app:layout_constraintLeft_toRightOf="@+id/stepTwoBar"
        app:layout_constraintTop_toTopOf="@id/stepThreeGift"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/stepThreeGift"
        android:layout_marginRight="36px"
        android:layout_marginTop="10px"/>

    <com.moaPlatform.moa.util.custom_view.temp.Responsive.ResponsiveImageView
        android:id="@+id/stepOneGift"
        android:layout_width="72px"
        android:layout_height="71px"
        android:src="@drawable/giftbox"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@+id/stepOneBar"
        app:layout_constraintRight_toLeftOf="@+id/stepTwoBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        />

    <com.moaPlatform.moa.util.custom_view.temp.Responsive.ResponsiveImageView
        android:id="@+id/stepTwoGift"
        android:layout_width="72px"
        android:layout_height="71px"
        android:src="@drawable/giftbox"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@+id/stepTwoBar"
        app:layout_constraintRight_toLeftOf="@id/stepThreeBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"/>

    <com.moaPlatform.moa.util.custom_view.temp.Responsive.ResponsiveImageView
        android:id="@+id/stepThreeGift"
        android:layout_width="72px"
        android:layout_height="71px"
        android:src="@drawable/giftbox"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@+id/stepThreeBar"
        app:layout_constraintRight_toRightOf="@id/stepThreeBar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"/>

    <com.moaPlatform.moa.util.custom_view.temp.Responsive.ResponsiveTextView
        android:id="@+id/stepOneGiftCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1회"
        app:responsiveTextSize="30"
        android:textColor="@color/richGold"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/stepOneGift"
        app:layout_constraintTop_toBottomOf="@+id/stepOneGift"
        app:layout_constraintRight_toRightOf="@id/stepOneGift"
        android:layout_marginTop="18px"/>

    <com.moaPlatform.moa.util.custom_view.temp.Responsive.ResponsiveTextView
        android:id="@+id/stepTwoGiftCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2회"
        app:responsiveTextSize="30"
        android:textColor="@color/richGold"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/stepTwoGift"
        app:layout_constraintTop_toBottomOf="@+id/stepTwoGift"
        app:layout_constraintRight_toRightOf="@id/stepTwoGift"
        android:layout_marginTop="18px"/>

    <com.moaPlatform.moa.util.custom_view.temp.Responsive.ResponsiveTextView
        android:id="@+id/stepThreeGiftCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3회"
        app:responsiveTextSize="30"
        android:textColor="@color/richGold"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/stepThreeGift"
        app:layout_constraintTop_toBottomOf="@+id/stepThreeGift"
        app:layout_constraintRight_toRightOf="@id/stepThreeGift"
        android:layout_marginTop="18px"/>

</androidx.constraintlayout.widget.ConstraintLayout>