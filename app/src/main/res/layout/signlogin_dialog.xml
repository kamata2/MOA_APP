<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_form_cover"
    android:paddingRight="13.33dp"
    android:paddingBottom="24.33dp">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="36.7dp"
        android:layout_alignStart="@+id/underLine"
        android:layout_alignEnd="@+id/underLine">

        <RelativeLayout
            android:id="@+id/btnClose"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:paddingStart="13.3dp"
            android:paddingEnd="0dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="1.33dp"
                android:layout_marginBottom="1.33dp"
                android:background="@color/transparent"
                android:contentDescription="@string/underline_description"
                android:scaleType="fitXY"
                android:src="@drawable/btn_x_k" />

        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            style="@style/MoaFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="확인"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/underLine"
        android:layout_width="286.67dp"
        android:layout_height="1px"
        android:layout_below="@+id/headerLayout"
        android:layout_marginStart="13.3dp"
        android:background="@color/pinkSwan"
        android:contentDescription="@string/underline_description" />

    <TextView
        android:id="@+id/dialogContent"
        style="@style/MoaFont"
        android:layout_width="257.67dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/underLine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24.33dp"
        android:lineSpacingExtra="3dp"
        android:text="GOEAT PAY는 회원가입/로그인 후 이용할 수 있습니다."
        android:textColor="@color/matterhorn"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/no"
        style="@style/MoaFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogContent"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@id/yes"
        android:background="@color/white"
        android:paddingEnd="32.3dp"
        android:text="로그인"
        android:textColor="@color/coral"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yes"
        style="@style/MoaFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogContent"
        android:layout_alignEnd="@+id/underLine"
        android:layout_marginTop="18dp"
        android:background="@color/white"
        android:paddingEnd="13.33dp"
        android:text="회원가입"
        android:textColor="@color/coral"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>