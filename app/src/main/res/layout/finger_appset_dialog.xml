<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_form_cover"
    android:paddingLeft="13.33dp"
    android:paddingTop="12dp"
    android:paddingRight="13.33dp"
    android:paddingBottom="24.33dp">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/underLine"
        android:layout_alignEnd="@+id/underLine">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="1.33dp"
            android:layout_marginBottom="1.33dp"
            android:background="@color/transparent"
            android:contentDescription="@string/underline_description"
            android:scaleType="fitXY"
            android:src="@drawable/black_close" />

        <TextView
            android:id="@+id/title"
            style="@style/MoaFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="알림"
            android:textColor="@color/black"
            android:textSize="13.33sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/underLine"
        android:layout_width="286.67dp"
        android:layout_height="1px"
        android:layout_below="@+id/headerLayout"
        android:layout_marginTop="11.67dp"
        android:background="@color/pinkSwan"
        android:contentDescription="@string/underline_description" />

    <LinearLayout
        android:id="@+id/dialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="61.7dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:background="@drawable/fingerprint_s" />

        <TextView
            style="@style/MoaFont"
            android:layout_width="257.67dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/underLine"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="9dp"
            android:text="지문 센서를 터치해 주세요."
            android:textColor="@color/matterhorn"
            android:textSize="13.33sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/cancel"
        style="@style/MoaFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogContent"
        android:layout_alignEnd="@+id/underLine"
        android:layout_marginTop="38dp"
        android:layout_marginRight="21dp"
        android:background="@color/white"
        android:paddingStart="13.33dp"
        android:text="취소"
        android:textColor="@color/coral"
        android:textSize="13.33sp"
        android:textStyle="bold" />

</RelativeLayout>