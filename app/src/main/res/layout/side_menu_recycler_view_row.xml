<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteSmoke"

    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_data_form_cover"
        android:layout_margin="5dp">
        
        <ImageView
            android:id="@+id/photo"
            android:layout_width="61.67dp"
            android:layout_height="61.33dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="18.67dp"
            android:layout_marginTop="10.67dp"
            android:layout_marginBottom="10.67dp"

            />

        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:background="@color/pinkSwan"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />
        
        <ImageView
            android:layout_width="7dp"
            android:layout_height="6.67dp"
            android:background="@drawable/btn_x_k"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8.67dp"
            android:layout_marginRight="23.67dp"
            />
        
        <TextView
            android:id="@+id/coupon"
            android:layout_width="46.67dp"
            android:layout_height="wrap_content"
            android:background="@drawable/store_list_coupon_style"
            android:text="쿠  폰"
            android:textSize="8.33dp"
            android:gravity="center"
            android:textColor="@color/coral"
            android:textStyle="bold"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="41.33dp"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:layout_width="46.67dp"
            android:layout_height="wrap_content"
            android:background="@drawable/store_list_accrual_rate_style"
            android:text="적립률 7%"
            android:textSize="8.33dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_below="@id/coupon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="41.33dp"

            />

        <TextView
            android:id="@+id/storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동대문 엽기 떡볶이"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12.67dp"
            android:layout_toRightOf="@id/photo"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="10.33dp"
            />

        <TextView
            android:layout_toRightOf="@id/storename"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="5.67dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/store_list_take_out_style"
            android:text="테이크아웃"
            android:textSize="7.33dp"
            android:textColor="@color/white"
            android:paddingTop="4.33dp"
            android:paddingBottom="4dp"
            android:paddingLeft="4.67dp"
            android:paddingRight="4.67dp"
            android:gravity="center"

            />
        
        <ImageView
            android:id="@+id/star"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/yellow_star"
            android:layout_toRightOf="@id/photo"
            android:layout_marginLeft="11.33dp"
            android:layout_below="@id/storename"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.2"
            android:textColor="@color/black"
            android:textSize="10.67dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/star"
            android:layout_below="@id/storename"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰 34"
            android:textColor="@color/zambezi"
            android:textSize="10dp"
            android:layout_toRightOf="@id/number"
            android:layout_below="@id/storename"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="즐겨찾기 223"
            android:textColor="@color/zambezi"
            android:textSize="10dp"
            android:layout_toRightOf="@id/review"
            android:layout_below="@id/storename"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9.33dp"
            />



        
    </RelativeLayout>

</androidx.cardview.widget.CardView>