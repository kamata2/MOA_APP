<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_form_cover"
    android:paddingTop="12dp"
    android:paddingBottom="24.33dp">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/underLine"
        android:layout_alignEnd="@+id/underLine">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="1.33dp"
            android:layout_marginEnd="13.3dp"
            android:layout_marginBottom="1.33dp"
            android:background="@color/transparent"
            android:contentDescription="@string/underline_description"
            android:padding="20dp"
            android:src="@drawable/btn_x_k" />

        <TextView
            android:id="@+id/title"
            style="@style/MoaFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="알림"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/underLine"
        android:layout_width="286.67dp"
        android:layout_height="1px"
        android:layout_below="@+id/headerLayout"
        android:layout_marginTop="11.67dp"
        android:background="@color/pinkSwan"
        android:contentDescription="@string/underline_description" />

    <TextView
        android:id="@+id/dialogContent"
        style="@style/MoaFont"
        android:layout_width="217.67dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/underLine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24.33dp"
        android:textColor="@color/matterhorn"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvYesOrNoDialogNo"
        style="@style/MoaFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogContent"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@id/yes"
        android:background="@color/white"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="아니요"
        android:textColor="@color/coral"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yes"
        style="@style/MoaFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogContent"
        android:layout_alignEnd="@+id/underLine"
        android:layout_marginTop="18dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="예"
        android:textColor="@color/coral"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>