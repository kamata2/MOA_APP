<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.moaPlatform.moa.util.custom_view.CommonTitleView
        android:id="@+id/commonTitleWalletPointHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintWalletTopContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/commonTitleWalletPointHistory">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="43.3dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/wallet_point_histoy_goeat_point_title"
                android:textColor="@color/coral"
                android:textSize="14.3sp"
                style="@style/MoaFont"/>

            <TextView
                android:id="@+id/tvWalletPointHistroyGoEatPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="26.7sp"
                tools:text="3,000 P"
                style="@style/MoaFont"/>

            <TextView
                android:id="@+id/tvWalletPointHistroyGoEatPointWon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:textColor="#545454"
                android:textSize="15sp"
                tools:text="( &#8361;3,000 )"
                style="@style/MoaFont"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginStart="13.3dp"
                android:layout_marginRight="13.3dp"
                android:layout_marginTop="43dp"
                android:background="#dbdbdb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85.3dp">

                <View
                    android:id="@+id/viewWalletPointHistoryVerticalDivider"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="8.7dp"
                    android:layout_marginBottom="8.7dp"
                    android:background="#dbdbdb" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/viewWalletPointHistoryVerticalDivider"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/wallet_point_histoy_goeat_use_able_point"
                        style="@style/MoaFont"/>

                    <TextView
                        android:id="@+id/tvWalletPointHistoryUseAblePoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18.3sp"
                        tools:text="3,000 p"
                        android:layout_marginTop="6dp"
                        style="@style/MoaFont"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/viewWalletPointHistoryVerticalDivider"
                    android:gravity="center"
                   >

                    <LinearLayout
                        android:id="@+id/llWalletPointHistoryStandByPointTitleParent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/tvWalletPointHistoryStandByPointTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/wallet_point_histoy_goeat_stand_by_point"
                        style="@style/MoaFont"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/tvWalletPointHistoryStandByPointTitle"
                        android:layout_alignBottom="@id/tvWalletPointHistoryStandByPointTitle"
                        android:layout_marginLeft="4dp"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@id/tvWalletPointHistoryStandByPointTitle"
                        android:src="@drawable/questionmark" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvWalletPointHistoryStandByPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llWalletPointHistoryStandByPointTitleParent"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18.3sp"
                        tools:text="0 p"
                        android:layout_marginTop="6dp"
                        style="@style/MoaFont"/>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#cbcbcb" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4.7dp"
                android:background="#f2f2f2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="13.3dp"
                android:paddingRight="13.3dp">

                <TextView
                    android:id="@+id/tvWalletPointHistoryFilterTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wallet_point_histoy_goeat_filter_title"
                    android:textColor="@color/black"
                    android:textSize="14.3sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="19.7dp"
                    style="@style/MoaFont"/>

                <RadioGroup
                    android:id="@+id/rbWalletPointHistorySaveAndUse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkedButton="@id/rbWalletPointHistorySave"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/tvWalletPointHistoryFilterTitle"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvWalletPointHistoryFilterTitle">

                    <RadioButton
                        android:id="@+id/rbWalletPointHistorySave"
                        style="@style/CoralRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wallet_point_histoy_goeat_filter_save"
                        android:textSize="13.3sp" />

                    <RadioButton
                        android:id="@+id/rbWalletPointHistoryUse"
                        style="@style/CoralRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:text="@string/wallet_point_histoy_goeat_filter_use"
                        android:textSize="13.3sp"
                         />
                </RadioGroup>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="10dp"
                    android:background="#dbdbdb"
                    app:layout_constraintTop_toBottomOf="@id/tvWalletPointHistoryFilterTitle" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerWalletPointHistoryList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="13.3dp"
        android:paddingRight="13.3dp"
        app:layout_constraintTop_toBottomOf="@id/constraintWalletTopContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <LinearLayout
        android:id="@+id/llWalletPointHistoryEmptyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/recyclerWalletPointHistoryList"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:layout_width="78.7dp"
            android:layout_height="69dp"
            android:background="@drawable/fragment_order_history_empty_ic"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet_point_history_list_empty_content"
            android:layout_gravity="center"
            android:textColor="@color/gray98"
            android:textSize="13.3sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            style="@style/MoaFont"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>