<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSmoke"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/top_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.33dp"
                    android:background="@color/pinkSwan"
                    />

                <TextView
                    android:id="@+id/all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="전체 6개"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp"

                    />

                <TextView
                    android:id="@+id/alarm"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25.33dp"
                    android:layout_marginTop="6.33dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알림설정"
                    android:textSize="9.33dp"
                    android:textColor="@color/dimGray"

                    />

                <ImageView
                    android:id="@+id/gear"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="12.33dp"
                    android:layout_height="12.33dp"
                    android:background="@drawable/setting_s"
                    android:layout_marginTop="6.33dp"
                    />

                <TextView
                    android:layout_below="@id/all"
                    android:layout_marginLeft="23.33dp"
                    android:layout_marginTop="8.33dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수신일로부터 30일이 지난 메시지는 자동 삭제됩니다."
                    android:textSize="10.67dp"
                    android:textColor="@color/matterhorn51"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/top1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/common_data_form_cover">

                <TextView
                    android:id="@+id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22.33dp"
                    android:layout_marginTop="22dp"
                    android:text="리뷰 작성 안내"
                    android:textColor="@color/black"
                    android:textSize="10.67dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2019.02.07 13:22"
                    android:textColor="@color/darkGray"
                    android:textSize="9.33dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/review"
                    android:layout_marginTop="22.33dp"
                    android:layout_marginLeft="6dp"
                    />

                <ImageView
                    android:id="@+id/newbtn"
                    android:layout_toRightOf="@id/review"
                    android:layout_width="13.33dp"
                    android:layout_height="13.33dp"
                    android:background="@drawable/new_icon"
                    android:layout_marginLeft="91.67dp"
                    android:layout_marginTop="22dp"

                    />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="6.67dp"
                    android:background="@drawable/btn_x_k"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13.33dp"
                    android:layout_marginRight="21.67dp"
                    />

                <TextView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User1님이 12월 03일 주문하신 치킨달인 가산점 리플을 달아주"
                    android:textSize="10.67dp"
                    android:textColor="@color/black"
                    android:layout_below="@id/review"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="@dimen/space_9"
                    />

                <CheckBox
                    android:layout_width="14.33dp"
                    android:layout_height="7.67dp"
                    android:background="@drawable/side_alarm_arrowbutton"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="49dp"
                    android:button="@null"
                    />
                <TextView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="0.33dp"
                    android:layout_below="@id/user"
                    android:layout_marginLeft="18.33dp"
                    android:layout_marginTop="17.33dp"
                    android:layout_marginRight="18.33dp"
                    android:background="@color/pinkSwan"

                    />

                <TextView
                    android:layout_below="@id/line"
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22.33dp"
                    android:layout_marginTop="22dp"
                    android:text="포인트 소멸 안내"
                    android:textColor="@color/black"
                    android:textSize="10.67dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/day2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2019.02.07 13:22"
                    android:textColor="@color/darkGray"
                    android:textSize="9.33dp"
                    android:textStyle="bold"
                    android:layout_below="@id/line"
                    android:layout_toRightOf="@id/point"
                    android:layout_marginTop="22.33dp"
                    android:layout_marginLeft="6dp"
                    />


                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="6.67dp"
                    android:background="@drawable/btn_x_k"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13.33dp"
                    android:layout_marginRight="21.67dp"
                    android:layout_below="@id/line"
                    />

                <TextView
                    android:id="@+id/user2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User1님께서 이벤트로 지급 받으신 포인트가 01월 14일에 소멸"
                    android:textSize="10.67dp"
                    android:textColor="@color/black"
                    android:layout_below="@id/point"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="@dimen/space_9"
                    />

                <CheckBox
                    android:layout_width="14.33dp"
                    android:layout_height="7.67dp"
                    android:background="@drawable/side_alarm_arrowbutton"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="49dp"
                    android:layout_below="@id/line"
                    android:button="@null"
                    />
                <TextView
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.33dp"
                    android:layout_below="@id/user2"
                    android:layout_marginLeft="18.33dp"
                    android:layout_marginTop="17.33dp"
                    android:layout_marginRight="18.33dp"
                    android:background="@color/pinkSwan"

                    />

                <TextView
                    android:id="@+id/review2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22.33dp"
                    android:layout_marginTop="22dp"
                    android:text="리뷰 작성 안내"
                    android:textColor="@color/black"
                    android:textSize="10.67dp"
                    android:textStyle="bold"
                    android:layout_below="@id/line2"
                    />

                <TextView
                    android:id="@+id/day3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2019.02.07 13:22"
                    android:textColor="@color/darkGray"
                    android:textSize="9.33dp"
                    android:textStyle="bold"
                    android:layout_below="@id/line2"
                    android:layout_toRightOf="@id/review2"
                    android:layout_marginTop="22.33dp"
                    android:layout_marginLeft="6dp"
                    />


                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="6.67dp"
                    android:background="@drawable/btn_x_k"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13.33dp"
                    android:layout_marginRight="21.67dp"
                    android:layout_below="@id/line2"
                    />

                <TextView
                    android:id="@+id/chicken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="치킨달인 가산점 후라이드 세트 외 2건. 배달 완료!"
                    android:textSize="10.67dp"
                    android:textColor="@color/black"
                    android:layout_below="@id/review2"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="@dimen/space_9"
                    />

                <CheckBox
                    android:layout_width="14.33dp"
                    android:layout_height="7.67dp"
                    android:background="@drawable/side_alarm_arrowbutton"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="49dp"
                    android:layout_below="@id/line2"
                    android:button="@null"
                    />
                <TextView
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="0.33dp"
                    android:layout_below="@id/chicken"
                    android:layout_marginLeft="18.33dp"
                    android:layout_marginTop="17.33dp"
                    android:layout_marginRight="18.33dp"
                    android:background="@color/pinkSwan"

                    />



                <TextView
                    android:id="@+id/pointgive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22.33dp"
                    android:layout_marginTop="22dp"
                    android:text="적립금 지급 안내"
                    android:textColor="@color/black"
                    android:textSize="10.67dp"
                    android:textStyle="bold"
                    android:layout_below="@id/line3"
                    />

                <TextView
                    android:id="@+id/chickencoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2019.02.07 13:22"
                    android:textColor="@color/darkGray"
                    android:textSize="9.33dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/pointgive"
                    android:layout_marginTop="22.33dp"
                    android:layout_marginLeft="6dp"
                    android:layout_below="@id/line3"

                    />


                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="6.67dp"
                    android:background="@drawable/btn_x_k"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13.33dp"
                    android:layout_marginRight="21.67dp"
                    android:layout_below="@id/line3"
                    />

                <TextView
                    android:id="@+id/chickendal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="치킨달인 가산점 이용으로 00코인이 적립되었습니다."
                    android:textSize="10.67dp"
                    android:textColor="@color/black"
                    android:layout_below="@id/pointgive"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="@dimen/space_9"
                    />

                <CheckBox
                    android:layout_width="14.33dp"
                    android:layout_height="7.67dp"
                    android:background="@drawable/side_alarm_arrowbutton"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="49dp"
                    android:layout_below="@id/line3"
                    android:button="@null"
                    />
                <TextView
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="0.33dp"
                    android:layout_below="@id/chickendal"
                    android:layout_marginLeft="18.33dp"
                    android:layout_marginTop="17.33dp"
                    android:layout_marginRight="18.33dp"
                    android:background="@color/pinkSwan"

                    />

                <TextView
                    android:layout_below="@id/line4"
                    android:id="@+id/reserve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22.33dp"
                    android:layout_marginTop="22dp"
                    android:text="예약 확정 안내"
                    android:textColor="@color/black"
                    android:textSize="10.67dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/day4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2019.02.07 13:22"
                    android:textColor="@color/darkGray"
                    android:textSize="9.33dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/reserve"
                    android:layout_below="@id/line4"
                    android:layout_marginTop="22.33dp"
                    android:layout_marginLeft="6dp"
                    />


                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="6.67dp"
                    android:background="@drawable/btn_x_k"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13.33dp"
                    android:layout_marginRight="21.67dp"
                    android:layout_below="@id/line4"
                    />

                <TextView
                    android:id="@+id/reserveuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모아 레스토랑 2018.01.12 (17:00)에 예약 일정이 확정되었습니다. 예약을 취소/변경하는 경우 예약 내역에서 취소하거나 매장으로 미리 연락 부탁 드립니다."
                    android:textSize="10.67dp"
                    android:textColor="@color/black"
                    android:layout_below="@id/reserve"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="@dimen/space_9"
                    android:layout_toLeftOf="@+id/arrow"
                    android:layout_alignParentLeft="true"
                    />

                <CheckBox
                    android:id="@+id/arrow"
                    android:layout_width="14.33dp"
                    android:layout_height="7.67dp"
                    android:background="@drawable/side_alarm_arrowbutton"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="49dp"
                    android:layout_below="@id/line4"
                    android:button="@null"
                    />
                
                <Button
                    android:id="@+id/button"
                    android:layout_width="105dp"
                    android:layout_height="24.33dp"
                    android:background="@drawable/side_alarm_button_gray"
                    android:text="자세히 보기"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:layout_marginTop="11.67dp"
                    android:layout_centerHorizontal="true"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_below="@id/reserveuser"
                    />
                <TextView
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="0.33dp"
                    android:layout_below="@id/button"
                    android:layout_marginLeft="18.33dp"
                    android:layout_marginTop="11.67dp"
                    android:layout_marginRight="18.33dp"
                    android:background="@color/pinkSwan"

                    />

                <TextView
                    android:id="@+id/burger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22.33dp"
                    android:layout_marginTop="22dp"
                    android:text="(AD) 버거킹 최대 41% 특급 할인 쿠폰"
                    android:textColor="@color/black"
                    android:textSize="10.67dp"
                    android:textStyle="bold"
                    android:layout_below="@id/line5"
                    />

                <TextView
                    android:id="@+id/day5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2019.02.07 13:22"
                    android:textColor="@color/darkGray"
                    android:textSize="9.33dp"
                    android:textStyle="bold"
                    android:layout_below="@id/line5"
                    android:layout_toRightOf="@id/burger"
                    android:layout_marginTop="22.33dp"
                    android:layout_marginLeft="6dp"
                    />


                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="6.67dp"
                    android:background="@drawable/btn_x_k"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13.33dp"
                    android:layout_marginRight="21.67dp"
                    android:layout_below="@id/line5"
                    />

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자세히 보기"
                    android:textSize="10.67dp"
                    android:textColor="@color/black"
                    android:layout_below="@id/burger"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="@dimen/space_9"
                    android:layout_marginBottom="17.33dp"
                    />

                <CheckBox
                    android:layout_width="14.33dp"
                    android:layout_height="7.67dp"
                    android:background="@drawable/side_alarm_arrowbutton"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="49dp"
                    android:layout_below="@id/line5"
                    android:layout_marginBottom="18dp"
                    android:button="@null"

                    />


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>