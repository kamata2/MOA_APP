<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.moaPlatform.moa.util.custom_view.CommonTitleView
        android:id="@+id/commontitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/commontitle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="83dp"
            android:gravity="center"
            android:text="지문인증 설정으로 로그인 및\n결제가 간편해집니다."
            android:textColor="#565656"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="60.7dp"
            android:layout_height="67.3dp"
            android:layout_gravity="center"
            android:layout_marginTop="46dp"
            android:background="@drawable/fingerprint_log" />

        <TextView
            style="@style/MoaFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:layout_marginTop="84dp"
            android:text="@string/finger_print_cellphone"
            android:textColor="@color/black"
            android:textSize="12.7sp"
            android:textStyle="bold" />

        <TextView
            style="@style/MoaFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:layout_marginTop="31.7dp"
            android:text="@string/finger_print_app_user"
            android:textColor="@color/black"
            android:textSize="12.7sp"
            android:textStyle="bold" />

        <TextView
            style="@style/MoaFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:layout_marginTop="31.7dp"
            android:layout_marginRight="13.3dp"
            android:lineSpacingExtra="3dp"
            android:text="@string/finger_print_warring"
            android:textColor="@color/black"
            android:textSize="12.7sp"
            android:textStyle="bold" />

        <TextView
            style="@style/MoaFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:layout_marginTop="31.7dp"
            android:layout_marginRight="13.3dp"
            android:lineSpacingExtra="3dp"
            android:text="@string/finger_print_setting"
            android:textColor="@color/black"
            android:textSize="12.7sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/fingerlogin_cancel"
            style="@style/MoaFont"
            android:layout_width="0dp"
            android:layout_height="53.3dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="#b0b0b0"
            android:text="설정 취소"
            android:textColor="@color/white"
            android:textSize="16.7sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fingerlogin_retry"
            style="@style/MoaFont"
            android:layout_width="0dp"
            android:layout_height="53.3dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/common_radius_coral_button_form"
            android:text="인증 재시도"
            android:textColor="@color/white"
            android:textSize="16.7sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>