                <!--android:textColor="#595959"-->
                <!--android:textSize="10sp" />-->
        <!--</RelativeLayout>-->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="13.3dp"
        android:background="#cbcbcb" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4.7dp"
        android:background="#f2f2f2" />


    <!-- 영업정보 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tvEatOutStoreDetailBusinessTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:text="@string/eatout_store_detail_business_info"
            android:textColor="#1c1c1c"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/MoaFont"
            />

        <TextView
            style="@style/MoaFont"
            android:id="@+id/tvEatOutStoreDetailBusinessHourTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.3dp"
            android:lineSpacingExtra="6.3sp"
            android:text="@string/eatout_store_detail_business_time"
            android:textColor="@color/black"
            android:textSize="12.7sp"
            app:layout_constraintLeft_toLeftOf="@id/tvEatOutStoreDetailBusinessTitle"
            app:layout_constraintTop_toBottomOf="@id/tvEatOutStoreDetailBusinessTitle" />

        <TextView
            style="@style/MoaFont"
            android:id="@+id/tvEatOutStoreDetailBusinessHourContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="96.3dp"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="6.3sp"
            android:singleLine="true"
            android:textColor="@color/nobel"
            android:textSize="12.7sp"
            app:layout_constraintBottom_toBottomOf="@id/tvEatOutStoreDetailBusinessHourTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEatOutStoreDetailBusinessTitle"
            app:layout_constraintTop_toTopOf="@id/tvEatOutStoreDetailBusinessHourTitle"
            tools:text="매일 오전 09:00~20:00" />

        <TextView
            style="@style/MoaFont"
            android:id="@+id/tvEatOutStoreDetailLastOrderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.7dp"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="6.3sp"
            android:text="@string/eatout_store_detail_last_order"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@id/tvEatOutStoreDetailBusinessTitle"
            app:layout_constraintTop_toBottomOf="@id/tvEatOutStoreDetailBusinessHourTitle" />

        <TextView
            style="@style/MoaFont"
            android:id="@+id/tvEatOutStoreDetailLastOrderContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="96.3dp"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="6.3sp"
            android:singleLine="true"
            android:textColor="@color/nobel"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/tvEatOutStoreDetailLastOrderTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEatOutStoreDetailBusinessHourTitle"
            app:layout_constraintTop_toTopOf="@id/tvEatOutStoreDetailLastOrderTitle"
            tools:text="20:00" />

        <TextView
            style="@style/MoaFont"
            android:id="@+id/tvEatOutStoreDetailClosingDayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.7dp"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="6.3sp"
            android:text="@string/eatout_store_detail_closing_day"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@id/tvEatOutStoreDetailLastOrderTitle"
            app:layout_constraintTop_toBottomOf="@id/tvEatOutStoreDetailLastOrderTitle" />

        <TextView
            android:id="@+id/tvEatOutStoreDetailClosingDayContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="96.3dp"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="6.3sp"
            android:singleLine="true"
            android:textColor="@color/nobel"
            android:textSize="13sp"
            style="@style/MoaFont"
            app:layout_constraintBottom_toBottomOf="@id/tvEatOutStoreDetailClosingDayTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEatOutStoreDetailBusinessHourTitle"
            app:layout_constraintTop_toTopOf="@id/tvEatOutStoreDetailClosingDayTitle"
            tools:text="연중 무휴" />

        <TextView
            android:id="@+id/tvEatOutStoreDetailPhoneNumberTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.7dp"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="6.3sp"
            android:text="@string/eatout_store_detail_phone_number"
            android:textColor="@color/black"
            android:textSize="13sp"
            style="@style/MoaFont"
            app:layout_constraintLeft_toLeftOf="@id/tvEatOutStoreDetailClosingDayTitle"
            app:layout_constraintTop_toBottomOf="@id/tvEatOutStoreDetailClosingDayTitle" />

        <TextView
            style="@style/MoaFont"
            android:id="@+id/tvEatOutStoreDetailPhoneNumberContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="96.3dp"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="6.3sp"
            android:singleLine="true"
            android:textColor="@color/nobel"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/tvEatOutStoreDetailPhoneNumberTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEatOutStoreDetailClosingDayTitle"
            app:layout_constraintTop_toTopOf="@id/tvEatOutStoreDetailPhoneNumberTitle"
            tools:text="02-0000-0000" />
    </androidx.constraintlayout.widget.ConstraintLayout>




    <!-- 매장알림 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43.3dp"
        android:layout_marginLeft="13.3dp"
        android:layout_marginRight="13.3dp"
        >

        <TextView
            android:id="@+id/tvEatOutStoreDetailStoreNoticeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.1"
            android:text="@string/eatout_store_detail_store_notice"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEatOutStoreDetailStoreNoticeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/nobel"
            android:textSize="13sp"
            android:layout_marginTop="16.3dp"
            app:layout_constraintTop_toBottomOf="@id/tvEatOutStoreDetailStoreNoticeTitle"
            tools:text="현재 방문 리뷰 이벤트 중입니다. 방문 시 리뷰 작성 후 모아 앱을 보여주시면 서비스로 파스타를 드리고 있습니다." />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <!-- 대표 메뉴 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43.3dp">

        <TextView
            android:id="@+id/tvEatOutStoreDetailTitleMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.7dp"
            android:letterSpacing="-0.1"
            android:text="@string/eatout_store_detail_menu_title"
            android:textColor="@color/black"
            android:textSize="15sp"
            style="@style/MoaFont"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEatOutStoreDetailTitleMenuMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingRight="13.7dp"
            android:letterSpacing="-0.02"
            android:text="@string/eatout_store_detail_common_more"
            android:textColor="@color/nobel"
            android:textSize="11sp"
            style="@style/MoaFont"
            app:layout_constraintBottom_toBottomOf="@id/tvEatOutStoreDetailTitleMenu"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvEatOutStoreDetailTitleMenu" />

        <LinearLayout
            android:id="@+id/llEatOutStoreDetailTitleMenuList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.3dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvEatOutStoreDetailTitleMenu" />

        <TextView
            android:id="@+id/tvEatOutStoreDetailEmptyMenuList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eatout_store_detail_menu_list_empty"
            android:textColor="@color/nobel"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/llEatOutStoreDetailTitleMenuList"
            android:layout_marginLeft="13.3dp"
            android:layout_marginRight="13.3dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="20dp"
        android:background="#cbcbcb" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4.7dp"
        android:background="#f2f2f2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tvEatOutStoreDetailReviewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.7dp"
            android:letterSpacing="-0.1"
            android:text="@string/eatout_store_detail_recently_review"
            android:textColor="@color/black"
            android:textSize="15sp"
            style="@style/MoaFont"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvEatOutStoreDetailReviewMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingRight="13.7dp"
            android:letterSpacing="-0.02"
            android:text="@string/eatout_store_detail_common_more"
            android:textColor="@color/nobel"
            android:textSize="11sp"
            style="@style/MoaFont"
            app:layout_constraintBottom_toBottomOf="@id/tvEatOutStoreDetailReviewTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvEatOutStoreDetailReviewTitle" />

        <LinearLayout
            android:id="@+id/llEatOutStoreDetailReviewListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvEatOutStoreDetailReviewTitle"
            android:layout_marginTop="26.7dp"
            >
        <RelativeLayout
            android:id="@+id/rlEatOutStoreDetailReviewEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/ivEatOutStoreDetailEmptyIcon"
                android:layout_width="92.7dp"
                android:layout_height="79.3dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/plate"/>
            <TextView
                style="@style/MoaFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivEatOutStoreDetailEmptyIcon"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="작성된 리뷰가 없습니다."
                android:textColor="@color/gray98"
                android:textSize="13.3sp"
                android:textStyle="bold" />
        </RelativeLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>