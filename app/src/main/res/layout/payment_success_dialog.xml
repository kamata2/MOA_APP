<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_data_form_cover"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="232.7dp"
        android:layout_height="109.3dp"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_fileName="payment_success_dialog.json"
        app:lottie_imageAssetsFolder="payment_success_dialog"
        app:lottie_loop="true" />

    <ImageView
        android:layout_width="232.7dp"
        android:layout_height="1.3dp"
        android:background="@color/coral" />

    <LinearLayout
        android:layout_width="232.7dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/common_margin_10"
        android:paddingEnd="@dimen/common_margin_10">

        <TextView
            android:id="@+id/tvPaymentSuccessTitle"
            style="@style/BlackColorBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_toolbar_style"
            android:gravity="center_horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="결제 금액 정보"
            android:textSize="@dimen/common_text_m_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_toolbar_style"
            android:orientation="horizontal"
            android:paddingTop="13.3dp"
            android:paddingBottom="13.3dp">

            <TextView
                style="@style/BlackColorBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="매장명"
                android:textSize="@dimen/common_text_xs_size" />

            <TextView
                android:id="@+id/storeName"
                style="@style/BlackColorBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="@dimen/common_text_xs_size"
                tools:text="국나와라 뚝딱" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_toolbar_style"
            android:orientation="vertical"
            android:paddingTop="13.3dp"
            android:paddingBottom="13.3dp">

            <TextView
                style="@style/BlackColorBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="주문내역"
                android:textSize="@dimen/common_text_xs_size" />

            <TextView
                android:id="@+id/tvOrderMenus"
                style="@style/MoaFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.7dp"
                android:textAlignment="textEnd"
                android:textColor="@color/grey"
                android:textSize="@dimen/common_text_xxxs_size"
                android:textStyle="bold"
                tools:text="된장국/오곡밥/반찬3종" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_toolbar_style"
            android:orientation="horizontal"
            android:paddingTop="13.3dp"
            android:paddingBottom="13.3dp">

            <TextView
                android:id="@+id/tvPaymentSuccessTotalPrice"
                style="@style/BlackColorBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="결제 금액"
                android:textSize="@dimen/common_text_xs_size" />

            <TextView
                android:id="@+id/tvPaymentPrice"
                style="@style/BlackColorBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="@dimen/common_text_xs_size"
                tools:text="19,000원" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_toolbar_style"
            android:orientation="horizontal"
            android:paddingTop="13.3dp"
            android:paddingBottom="13.3dp">

            <TextView
                style="@style/BlackColorBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="적립 예정 포인트"
                android:textSize="@dimen/common_text_xs_size" />

            <TextView
                android:id="@+id/tvSavePoint"
                style="@style/BlackColorNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="@dimen/common_text_xs_size"
                tools:text="19원" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>