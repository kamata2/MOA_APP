<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >

            <gradient
                android:startColor="@color/white"
                android:endColor="@color/ghost"
                android:centerColor="@color/ghost"
                android:centerX="1"
                />
            <!--<solid android:color="@color/ghost"/>-->
        </shape>
    </item>
    <item>
        <shape  android:shape="rectangle" >
            <gradient
                android:centerY="0"
                android:angle="90"
                android:endColor="@color/white"
                android:centerColor="@color/ghost"
                />
        </shape>
    </item>
    <item
        android:bottom="1px"
        android:left="0dp"
        android:right="1px"
        android:top="0dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
            <stroke android:width="100px" android:color="@color/white"/>
        </shape>
    </item>
</layer-list>
