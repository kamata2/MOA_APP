<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <layer-list>
            <item android:drawable="@drawable/payment_moa_point_open_ic"
                android:width="7.3dp"
                android:height="4.7dp"
                android:left="8.7dp">
            </item>
        </layer-list>
    </item>
    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 이미지 영역 -->
            <item
                android:drawable="@drawable/payment_moa_point_close_ic"
                android:width="7.3dp"
                android:height="4.7dp"
                android:left="8.7dp"/>
        </layer-list>
    </item>

</selector>