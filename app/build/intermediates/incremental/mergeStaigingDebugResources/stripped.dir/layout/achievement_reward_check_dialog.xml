<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/achievement_reward_check_dialog_padding_left_right"
    android:paddingRight="@dimen/achievement_reward_check_dialog_padding_left_right"
    android:paddingTop="@dimen/achievement_reward_check_dialog_padding_top"
    android:paddingBottom="@dimen/achievement_reward_check_dialog_padding_bottom"
    android:background="@drawable/common_dialog_form_cover">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/achievement_reward_check_dialog_badge_title_temp"
        android:textColor="@color/black"
        android:textSize="@dimen/achievement_reward_check_dialog_badge_title_text_size"
        android:textStyle="bold"
        style="@style/MoaFont"/>

    <ImageView
        android:layout_width="@dimen/achievement_reward_check_dialog_title_under_line_width"
        android:layout_height="@dimen/achievement_reward_check_dialog_title_under_line_height"
        android:background="@color/pinkSwan"
        android:layout_marginTop="@dimen/achievement_reward_check_dialog_title_under_line_margin_top"
        android:contentDescription="@string/underline_description"/>

    <ImageView
        android:layout_width="@dimen/achievement_reward_check_dialog_badge_ic_size"
        android:layout_height="@dimen/achievement_reward_check_dialog_badge_ic_size"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/badge_review"
        android:layout_marginTop="@dimen/achievement_reward_check_dialog_badge_ic_margin_top"
        android:contentDescription="@string/achievement_reward_check_dialog_badge_ic_description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/achievement_reward_check_dialog_badge_reward_title"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/achievement_reward_check_dialog_reward_title_text_size"
        android:layout_marginTop="@dimen/achievement_reward_check_dialog_reward_title_margin_top"
        style="@style/MoaFont"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/achievement_reward_check_dialog_badge_reward_content_temp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="@dimen/achievement_reward_check_dialog_reward_content_text_size"
        android:textColor="@color/matterhorn"
        android:layout_marginTop="@dimen/achievement_reward_check_dialog_reward_content_margin_top"
        style="@style/MoaFont"/>

</LinearLayout>