<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_order_detail_history_top_space">

    <TextView
        android:id="@+id/tvItemOrderDetailHistoryProductName"
        style="@style/MoaFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/coral"
        android:textSize="@dimen/activity_order_detail_history_order_info_item_text_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="양념 감자 세트 (1)" />

    <TextView
        android:id="@+id/tvItemOrderDetailHistoryProductPrice"
        style="@style/MoaFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/coral"
        android:textSize="@dimen/activity_order_detail_history_order_info_item_text_size"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="9,9000원" />

</androidx.constraintlayout.widget.ConstraintLayout>