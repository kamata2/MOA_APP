<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="57.3dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/noti_detail_top"
        android:layout_width="250dp"
        android:layout_height="14.3dp"
        android:layout_marginLeft="13.3dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자주묻는질문"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/side_noti_main_next"
        android:layout_width="7.7dp"
        android:layout_height="14.3dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14.3dp"
        android:background="@drawable/arrow_2_right" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/noti_detail_top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@color/coral" />
</RelativeLayout>
