<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSmoke"
    android:orientation="vertical"
    >
    <include layout="@layout/top_toolbar"
        android:id="@+id/top"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/common_data_form_cover"
        >

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 비밀번호"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="19.33dp"
            android:layout_marginTop="24.67dp"
            style="@style/MoaFont"
            />

        <EditText
            android:id="@+id/textbox"
            android:layout_below="@id/email"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:hint="******8"
            android:textSize="10.67dp"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:paddingLeft="10dp"
            android:layout_marginTop="8.33dp"
            android:layout_marginLeft="18.33dp"
            android:layout_marginRight="18.33dp"
            android:background="@drawable/common_white_coral_style_nonradius"
            style="@style/MoaFont"
            />

        <TextView
            android:id="@+id/line"
            android:layout_below="@id/textbox"
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:layout_marginTop="21.33dp"
            android:background="@color/lightGray"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/password"
            android:layout_below="@id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 비밀번호"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="19.33dp"
            android:layout_marginTop="24.67dp"
            style="@style/MoaFont"
            />

        <EditText
            android:id="@+id/textboxpassword"
            android:layout_below="@id/password"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:hint="******8"
            android:textSize="10.67dp"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:paddingLeft="10dp"
            android:layout_marginTop="8.33dp"
            android:layout_marginLeft="18.33dp"
            android:layout_marginRight="18.33dp"
            android:background="@drawable/common_edit_text_form"
            style="@style/MoaFont"
            />

        <TextView
            android:layout_below="@id/textboxpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호를 8~15자로 입력해 주세요."
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="@color/coral"
            android:layout_marginLeft="19.33dp"
            android:layout_marginTop="8.33dp"
            style="@style/MoaFont"
            />

        <TextView
            android:id="@+id/passwordcheck"
            android:layout_below="@id/textboxpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 비밀번호 확인"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="19.33dp"
            android:layout_marginTop="38dp"
            style="@style/MoaFont"
            />

        <EditText
            android:id="@+id/textboxpasswordcheck"
            android:layout_below="@id/passwordcheck"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:hint="******s"
            android:textSize="10.67dp"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:paddingLeft="10dp"
            android:layout_marginTop="8.33dp"
            android:layout_marginLeft="18.33dp"
            android:layout_marginRight="18.33dp"
            android:background="@drawable/common_edit_text_form"
            style="@style/MoaFont"
            />

        <TextView
            android:layout_below="@id/textboxpasswordcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호가 일치하지 않습니다."
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="@color/coral"
            android:layout_marginLeft="19.33dp"
            android:layout_marginTop="8.33dp"
            style="@style/MoaFont"
            />

        <Button
            android:layout_below="@id/textboxpasswordcheck"
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@drawable/common_gray_button"
            android:text="변경완료"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="27.33dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="18.33dp"
            android:layout_marginRight="18.33dp"
            android:layout_marginBottom="23.33dp"
            style="?android:attr/borderlessButtonStyle"


            />




    </RelativeLayout>

</LinearLayout>