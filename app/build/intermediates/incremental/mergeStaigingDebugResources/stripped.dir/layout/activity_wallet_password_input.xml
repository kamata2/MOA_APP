<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.moaPlatform.moa.util.custom_view.CommonTitleView
        android:id="@+id/commonTitleWalletPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvWalletPasswordInputTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.01"
        android:text="@string/wallet_password_input_title_content"
        android:layout_below="@id/commonTitleWalletPasswordInput"
        android:textColor="#565656"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_below="@id/tvWalletPasswordInputTitle"
        android:gravity="center">

        <com.moaPlatform.moa.util.custom_view.CommonPasswordInputView
            android:id="@+id/inputWalletPasswordInputView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnWalletPasswordInputPointExchange"
        style="@style/MoaFont"
        android:layout_width="match_parent"
        android:layout_height="53.3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_rect_0_0_0_0_ff7a4b_0dp_trans"
        android:gravity="center"
        android:text="포인트 전환하기"
        android:textColor="@color/white"
        android:textSize="16.7dp" />
    
</RelativeLayout>
