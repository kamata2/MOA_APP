<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.moaPlatform.moa.util.custom_view.CommonTitleView
        android:id="@+id/commontitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/pay_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commontitle"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="13.3dp"
        android:paddingRight="13.3dp">

        <TextView
            android:id="@+id/test007"
            style="@style/MoaFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/payment_password_content_1"
            android:textColor="@color/black"
            android:textSize="14.3sp"
            android:textStyle="bold" />

        <TextView
            style="@style/MoaFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/payment_password_content_2"
            android:textColor="#494949"
            android:textSize="12.7sp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="20dp"
            android:background="@color/linkWater" />

        <com.moaPlatform.moa.util.custom_view.CommonPasswordInputView
            android:id="@+id/inputPasswordSettingPassword"
            style="@style/MoaFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/into_password_number"
            style="@style/MoaFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.3dp"
            android:text="비밀번호로 사용할 숫자 6자리를 입력하세요."
            android:textColor="@color/coral"
            android:textSize="11.3sp"
            android:visibility="gone" />

        <com.moaPlatform.moa.util.custom_view.CommonPasswordInputView
            android:id="@+id/inputPasswordSettingPasswordCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/resultmsg"
            style="@style/MoaFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.3dp"
            android:text="비밀번호가 일치하지 않습니다."
            android:textColor="@color/coral"
            android:textSize="11.3sp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_text_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_text1"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/pay_text1"
            android:layout_marginTop="0.3dp"
            android:background="@color/linkWater" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/whiteSmoke" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/middle_text_line"
        android:orientation="vertical"
        android:paddingLeft="13.3dp"
        android:paddingRight="13.3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/payment_password_card_nick_name_setting_title1"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/payment_password_card_nick_name_setting_title2"
            android:textColor="#494949" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="20dp"
            android:background="@color/linkWater" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/payment_password_card_nick_name_title"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nameofnick"
            android:layout_width="match_parent"
            android:layout_height="46.7dp"
            android:layout_marginTop="8.3dp"
            android:background="@drawable/goeat_border"
            android:hint="@string/payment_password_card_nick_name_input_hint"
            android:maxLength="10"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:singleLine="true"
            android:textColorHint="#949494"
            android:textSize="13.3sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10자 이내"
            android:layout_marginTop="8dp"
            android:textSize="10.7sp"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="1.3dp"
            style="@style/MoaFont"
            android:textColor="#595959"
            />
    </LinearLayout>

    <Button
        android:id="@+id/goeatpayok"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="53.3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_radius_coral_button_form"
        android:text="@string/payment_password_register"
        android:textColor="#ffffff"
        android:textSize="16.7sp" />

</RelativeLayout>
