<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.moaPlatform.moa.util.custom_view.CommonTitleView
        android:id="@+id/viewBookmarkMainToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavoriteMainBookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/llBookmarkEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="85.7dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/store" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/MoaFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19.7dp"
                android:text="즐겨찾기에 등록된 매장이 없습니다."
                android:textColor="@color/gray98"
                android:textSize="13.3sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="9.7dp"
                android:orientation="vertical">

                <TextView
                    style="@style/MoaFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자주 이용하는 매장을 즐겨찾기에 등록하면"
                    android:textColor="@color/matterhorn51"
                    android:textSize="10.7sp" />

                <TextView
                    style="@style/MoaFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="간편하게 주문/예약할 수 있습니다."
                    android:textColor="@color/matterhorn51"
                    android:textSize="10.67sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>