<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/thumbNail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/underline_description" />

    <TextView
        android:id="@+id/tvBannerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_xxxs_size"
        tools:text="3/4"
        android:textColor="@color/white"
        android:textStyle="bold"
        style="@style/MoaFont"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/space_6_7"
        android:layout_marginEnd="@dimen/space_14"
        tools:ignore="RelativeOverlap"
        android:background="@drawable/store_list_banner_count"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

</RelativeLayout>