<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.moaPlatform.moa.util.custom_view.CommonTitleView
        android:id="@+id/commonTitleMyReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/every_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commonTitleMyReview">

        <LinearLayout
            android:id="@+id/noti_detail_top"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:layout_marginTop="30dp"
            style="@style/MoaFont">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자주묻는질문"
                android:textColor="@color/black"
                android:textSize="15sp"
                style="@style/MoaFont"
                android:textStyle="bold"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/side_noti_main_next"
            android:layout_width="7.7dp"
            android:layout_height="14.3dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14.3dp"
            android:background="@drawable/arrow_2_right" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@+id/noti_detail_top"
            android:layout_marginLeft="13.3dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="13.3dp"
            android:background="@drawable/bg_whitesmoke_bottom_lightgray" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/one_on_one_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/every_question">

        <LinearLayout
            android:id="@+id/noti_detail_top2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:1 문의하기"
                android:textColor="@color/black"
                android:textSize="15sp"
                style="@style/MoaFont"
                android:textStyle="bold"/>
        </LinearLayout>

        <ImageView
            android:layout_width="7.7dp"
            android:layout_height="14.3dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14.3dp"
            android:background="@drawable/arrow_2_right" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@+id/noti_detail_top2"
            android:layout_marginLeft="13.3dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="13.3dp"
            android:background="@drawable/bg_whitesmoke_bottom_lightgray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one_on_one_question">

        <LinearLayout
            android:id="@+id/noti_detail_top3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            style="@style/MoaFont">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 문의 내역"
                android:textColor="@color/black"
                android:textSize="15sp"
                style="@style/MoaFont"
                android:textStyle="bold"/>
        </LinearLayout>

        <ImageView
            android:layout_width="7.7dp"
            android:layout_height="14.3dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14.3dp"
            android:background="@drawable/arrow_2_right" />


    </RelativeLayout>

</RelativeLayout>
