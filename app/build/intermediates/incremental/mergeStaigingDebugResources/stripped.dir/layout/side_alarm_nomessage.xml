<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSmoke"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/top_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.33dp"
                    android:background="@color/pinkSwan"
                    />

                <TextView
                    android:id="@+id/all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="전체 6개"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp"
                    style="@style/MoaFont"

                    />

                <TextView
                    android:id="@+id/alarm"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25.33dp"
                    android:layout_marginTop="6.33dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알림설정"
                    android:textSize="9.33dp"
                    android:textColor="@color/dimGray"
                    style="@style/MoaFont"

                    />

                <ImageView
                    android:id="@+id/gear"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="12.33dp"
                    android:layout_height="12.33dp"
                    android:background="@drawable/setting_s"
                    android:layout_marginTop="6.33dp"
                    />

                <TextView
                    android:layout_below="@id/all"
                    android:layout_marginLeft="23.33dp"
                    android:layout_marginTop="8.33dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수신일로부터 30일이 지난 메시지는 자동 삭제됩니다."
                    android:textSize="10.67dp"
                    android:textColor="@color/matterhorn51"
                    style="@style/MoaFont"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whiteSmoke"

                >
                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="새로운 알림 메시지가"
                    android:textSize="13.33dp"
                    android:textStyle="bold"
                    android:textColor="@color/matterhorn"
                    android:layout_marginTop="122.67dp"
                    android:layout_marginLeft="118.67dp"
                    android:layout_marginRight="124.33dp"
                    android:layout_centerHorizontal="true"
                    style="@style/MoaFont"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/message"
                    android:text="없습니다."
                    android:textColor="@color/matterhorn"
                    android:textStyle="bold"
                    android:textSize="13.33dp"
                    android:layout_centerHorizontal="true"
                    style="@style/MoaFont"
                    />




            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>