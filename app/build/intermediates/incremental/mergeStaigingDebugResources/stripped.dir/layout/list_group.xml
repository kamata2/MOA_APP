<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:layout_marginTop="20dp"
            android:text="리뷰 작성 안내"
            android:textColor="@color/black"
            android:textSize="10.7dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019.02.07 13:22"
            android:textColor="@color/darkGray"
            android:textSize="9.33dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/review"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="6.7dp"
            android:maxLength="16"
            />

        <TextView
            android:id="@+id/newbtn"
            android:layout_toRightOf="@id/day"
            android:layout_width="13.33dp"
            android:layout_height="13.33dp"
            android:background="@drawable/new_icon"
            android:layout_marginLeft="6.7dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="6.7dp"
            android:background="@drawable/btn_x_k"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13.3dp"
            android:layout_marginRight="16.7dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="284.7dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10.7dp"
            android:textColor="@color/black"
            android:layout_below="@id/review"
            android:maxLines="1"
            />

    </LinearLayout>

</LinearLayout>