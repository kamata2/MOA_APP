<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_form_cover"
    android:paddingLeft="13.33dp"
    android:paddingTop="12dp"
    android:paddingRight="13.33dp"
    android:paddingBottom="24.33dp">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/underLine"
        android:layout_alignEnd="@+id/underLine">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/btn_x_k"
            android:scaleType="fitXY"
            android:background="@color/transparent"
            android:contentDescription="@string/underline_description"
            android:layout_marginTop="1.33dp"
            android:layout_marginBottom="1.33dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="알림"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            style="@style/MoaFont"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/underLine"
        android:layout_width="286.67dp"
        android:layout_height="1px"
        android:background="@color/pinkSwan"
        android:contentDescription="@string/underline_description"
        android:layout_below="@+id/headerLayout"
        android:layout_marginTop="11.67dp"/>

    <TextView
        android:id="@+id/dialogContent"
        android:layout_width="257.67dp"
        android:layout_height="wrap_content"
        android:textColor="@color/matterhorn"
        android:textSize="13.33sp"
        android:layout_below="@+id/underLine"
        android:layout_marginTop="24.33dp"
        android:layout_centerHorizontal="true"
        android:text="등록된 지문이 없습니다.\n 지문 등록 화면으로 이동하시겠습니까?"
        style="@style/MoaFont"/>

    <TextView
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="아니오"
        android:textSize="13.33sp"
        android:textColor="@color/coral"
        android:textStyle="bold"
        android:layout_marginLeft="21dp"
        android:layout_below="@+id/dialogContent"
        android:layout_toLeftOf="@id/yes"
        android:layout_marginTop="38dp"
        style="@style/MoaFont" />

    <TextView
        android:id="@+id/yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="예"
        android:layout_marginRight="21dp"
        android:textSize="13.33sp"
        android:textColor="@color/coral"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/underLine"
        android:layout_below="@+id/dialogContent"
        android:layout_marginTop="38dp"
        android:paddingStart="13.33dp"
        style="@style/MoaFont"/>

</RelativeLayout>