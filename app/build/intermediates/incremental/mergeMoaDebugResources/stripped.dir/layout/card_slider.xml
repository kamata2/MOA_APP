<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/rlCardSilderContainer"
        android:layout_width="297dp"
        android:layout_height="189dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/cardbg">

        <RelativeLayout
            android:id="@+id/cardslidertop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/cardcheck"
                android:layout_width="wrap_content"
                android:layout_height="18.3dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="16.3dp"
                android:background="@drawable/checkyn"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:id="@+id/cardnumbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardcheck"
                android:layout_marginLeft="16.7dp"
                android:layout_marginTop="34dp"
                android:layout_marginRight="26dp"
                android:gravity="right"
                android:text="삼성 탭탭오카드"
                android:textColor="#949494"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/cardelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="28dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="10dp"
                    android:background="@drawable/delete_card" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="삭제"
                    android:textColor="#a4a4a4"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cardsliderbottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <!--<TextView-->
            <!--android:id="@+id/cardadd"-->
            <!--android:layout_width="46.7dp"-->
            <!--android:layout_height="46.7dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="36.7dp"-->
            <!--android:gravity="center"-->
            <!--android:text="+"-->
            <!--android:textSize="45sp" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="37.3dp"
                android:gravity="center"
                android:text="@string/wallet_card_desc"
                android:textColor="#7d7d7d"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>